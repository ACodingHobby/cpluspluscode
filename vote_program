#include <iostream>
#include <string>
using namespace std;

int main() {
    int personAge;
    int votingAge = 18;
    cout << "Enter you age: ";
    cin >> personAge;
    
    if (personAge >= votingAge && personAge < 130) {
        cout << "You are of legal age (to vote)";
    } else if (personAge >= 130) {
        int year;
        cout << "What year is it? ";
        cin >> year;
        if (year >= 2500) {
            cout << "Sounds plausable with advances in medicine... you can vote";
        } else {
            cout << "You cannot vote...";
        }
    }
    
    else {
        cout << "You are too young to vote!";    
    }
}
